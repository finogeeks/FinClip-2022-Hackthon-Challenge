<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.authing.guard">



    <application
        android:name=".GuardApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_authing_default_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_authing_default_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.GuardFinClip">
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity" android:exported="true"/>
        <activity android:name=".UserActivity" android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name=".wxapi.WXEntryActivity" android:exported="true"/>

    </application>

</manifest>