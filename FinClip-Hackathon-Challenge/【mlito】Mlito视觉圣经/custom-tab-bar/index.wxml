<!--miniprogram/custom-tab-bar/index.wxml-->
<cover-view class="tab-bar {{isIphoneX?'isIPX':''}}">

  <cover-view wx:for="{{list}}" wx:key="index" class="tab-bar-item" data-path="{{item.pagePath}}" data-index="{{index}}" bindtap="switchTab">
    <cover-image class="ytp {{selected === index ? 'xz' : 'bxz'}}" src="{{selected === index ? item.selectedIconPath : item.iconPath}}"></cover-image>
    <cover-view style="color: {{selected === index ? selectedColor : color}}" class="wzz">{{item.text}}</cover-view>
  </cover-view>

  <!-- <cover-image src="https://www.mlito.com/wp-content/uploads/lite-di-5nav.png" class="tab-bar-bj"></cover-image> -->
</cover-view>