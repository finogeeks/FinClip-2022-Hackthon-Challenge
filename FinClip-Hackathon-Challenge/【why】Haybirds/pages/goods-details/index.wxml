<import src="../../wxParse/wxParse.wxml" />


<view class="container">

  <view class="goods-info-fx" bindtap='openShareDiv' >
      <image src='../../images/share.png' />
  </view>

<!-- 
  <view class="goods-info-fx2" bindtap='openShareDiv' >
      <image src='../../images/kf.png' />
  </view> -->

<!-- 幻灯片 -->
  <view class="swiper-container" wx:if="{{!goodsDetail.basicInfo.videoId}}">
    <swiper class="swiper_box" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" bindchange="swiperchange">
      <block wx:for="{{goodsDetail.pics}}" wx:key="id">
        <swiper-item>
          <image src="{{item.pic}}_m" class="slide-image" width="355" height="150" mode="aspectFit" lazy-load="true" />
        </swiper-item>
      </block>
    </swiper>
    <view class="dots">
      <block wx:for="{{goodsDetail.pics}}" wx:key="unique">
        <view class="dot{{index == swiperCurrent ? ' active' : ''}}"></view>
      </block>
    </view>
  </view>




  <!-- <view class="goods-info" style="margin-top:-2rpx;"> -->
    <!-- <view class="goods-title" style="padding-top:30rpx;">{{goodsDetail.basicInfo.characteristic}}</view> -->

    
    <!-- <view class="goods-price" style="padding-left:35rpx;">¥ {{goodsDetail.basicInfo.originalPrice}}</view> -->

    <!-- <view class="goods-price" style="color:#ffffff;font-size:24rpx;width:70%;  text-align:right;padding-right:35rpx;">截止时间: {{pingtuanSet.dateEnd}}</view> -->

  
  <!-- </view> -->


  <!-- <view class='space'></view> -->



  <view class="goods-des-info" style="margin-top:-2rpx;" wx:if="{{pingtuanList}}">
    <view class="label-title" >{{pingtuanList.setting.numberPersion}}人团       {{pingtuanList.joiners.length}}人已参团       {{pingtuanList.tuanInfo.statusStr}}</view>

    <view class="goods-text" style="margin:15rpx 0 15rpx 30rpx;color:#000;" >



<block wx:for="{{pingtuanList.joiners}}" wx:key="id">
   <view style="width:120rpx;float:left;position: relative;color:#000;margin-right:22rpx;">
        <image style="width: 120rpx; height: 120rpx;border-radius: 100%;" src="{{item.apiExtUserHelp.avatarUrl}}"></image>
   </view>
</block>



     

 

      
      <view style="width:100%;float:left;color:#000;height:auto;font-size:35rpx;">
        <view wx:if="{{pingtuanList.tuanInfo.status == 0}}" style="font-size:35rpx;">还差<text style="color:#000"> {{pingtuanList.setting.numberPersion - pingtuanList.joiners.length}} </text>人拼成</view>
        <view wx:if="{{pingtuanList.tuanInfo.status == 0}}" style="color: #B0B0B0;color:#000;font-size:35rpx;">截止: {{pingtuanList.tuanInfo.dateEnd}}</view>
        <view style="color: #B0B0B0;margin-top:-2rpx;color:#000;font-size:35rpx;">团长: {{pingtuanList.joiners[pingtuanList.joiners.length-1].apiExtUserHelp.nick}}</view>
      </view>
    </view>
  </view>



  <view class="goods-des-info" style="margin-top:-2rpx;margin-bottom: -20rpx;">
    <!-- <view class="label-title">商品介绍</view> -->
    <view class="goods-text" style=" line-height: 56rpx;margin-bottom: 0;">

       <rich-text nodes="{{ptxx}}" class="pxx"></rich-text>

      <!-- <template is="wxParse" data="{{wxParseData:article.nodes}}" /> -->
    </view>
  </view>


  <view wx:if="{{!curGoodsKanjia}}" class="footer-box">

    <view wx:if="{{kt}}" class="now-buy now-buy1" data-spid="{{ptsp5id}}"  data-ptid="{{pt5id}}" style="background-color:{{goodsDetail.extJson.bj1}}" bindtap="toPingtuan">{{goodsDetail.extJson.wz1}}</view>
    <view wx:if="{{kt}}" class="now-buy now-buy2" data-spid="{{ptsp8id}}"  data-ptid="{{pt8id}}" style="background-color:{{goodsDetail.extJson.bj2}}" bindtap="toPingtuan">{{goodsDetail.extJson.wz2}}</view>


    <view wx:if="{{ct}}" class="now-buy now-buy3"  data-spid="{{pingtuanList.tuanInfo.goodsId}}"   data-ptid="{{ctptid}}" style="background-color:{{goodsDetail.extJson.bj3}}" bindtap="toPingtuan">{{goodsDetail.extJson.wz3}}</view>

    <view wx:if="{{mian}}" class="now-buy now-buy3" style="background-color:{{goodsDetail.extJson.bj4}};" bindtap="chongxin">{{goodsDetail.extJson.wz4}}</view>

    <view wx:if="{{xq}}" class="now-buy now-buy3" style="background-color:{{goodsDetail.extJson.bj5}}" bindtap='openShareDiv'>{{goodsDetail.extJson.wz5}}</view>

  </view>

</view>


<!-- 分享 -->
<view wx:if="{{openShare}}" class="shareFloatDiv1"></view>
<view wx:if="{{openShare}}" class="shareFloatDiv2">
  <view class="p1">    
    <view class="weui-flex">
      <view class="weui-flex__item qrcode-button">
        <button class="weui-btn" type="primary" open-type="share">分享转发</button>
      </view>
      <view class="weui-flex__item qrcode-button">
        <button class="weui-btn" type="primary" bindtap="toPoster" data-goodsid="{{goodsDetail.basicInfo.id}}">生成海报</button>
      </view>
    </view>
  </view>
  <view class="p2"></view>
  <view class="p3" bindtap="closeShareDiv"> 取消分享 </view>
</view>