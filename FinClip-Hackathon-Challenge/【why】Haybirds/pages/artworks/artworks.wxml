            <view class="artwork-tab-item-subtitle">{{item.name}}</view>
        </view>

    </view> -->


    <view class="package-list-container nico-package" bindtap="gotozx">

        <view class="package-list">
            <!-- 小主题 -->
            <view class="package-item  " wx:if="{{category.hasSubItems}}" wx:for="{{categories}}" data-type="nj" wx:for-index="categoryIndex" wx:for-item="category" wx:key="p">
                <view class="package-intro">
                    <view class="package-title">{{category.name}}系列</view>
                    <view class="package-subtitle">{{category.characteristic}}</view>
                    <view class="package-promise">{{category.videoId}}</view>
                </view>

                <view class="package-gallery artwork-theme-groups">
                    <swiper autoplay="true" duration="400" indicatorDots="true" interval="5000">


                        <swiper-item wx:for="{{themeGroups}}" wx:for-index="themeGroupIndex" wx:for-item="items" wx:key="i">
                            <div class="artwork-theme-group">
                                <div bindtap="gotoProductDetail" class="artwork-theme-item" data-categoryid="{{category.id}}" data-type="nj" wx:for="{{items}}" wx:key="it">
                                    <image lazyLoad="{{themeGroupIndex<3}}" mode="aspectFill" src="{{item.picUrl}}"></image>
                                    <text>{{item.title}}</text>
                                </div>
                            </div>
                        </swiper-item>

                    </swiper>
                </view>

            </view>

            <!-- 其他 -->
            <view class="package-item  " wx:if="{{category.bannerlist.length&&!category.hasSubItems}}" wx:for="{{categories}}" data-type="nj" wx:for-index="categoryIndex" wx:for-item="category" wx:key="p">

                <view class="package-intro">
                    <view class="package-title">{{category.name}}系列</view>
                    <view class="package-subtitle">{{category.characteristic}}</view>
                    <view class="package-promise">{{category.videoId}}</view>
                </view>

                <view class="package-gallery">
                    <scroll-view class="scroll-view" scrollX="true" style="width: 100%">

                        <view bindtap="gotoProductDetail" class="scroll-view-item" data-categoryid="{{category.id}}" data-type="nj" wx:for="{{category.bannerlist}}" wx:for-index="idx" wx:key="cg">

                            <image data-package="{{category.id}}" data-url="{{item.picUrl}}" lazyLoad="false" mode="aspectFit" src="{{item.picUrl}}" bindload="imageLoad" style="width: {{376*1620/1080}}rpx" wx:if="{{idx!==item.length && item.linkUrl == 'h'}}"></image>

                            <image data-package="{{category.id}}" data-url="{{item.picUrl}}" lazyLoad="false" mode="aspectFit" src="{{item.picUrl}}" bindload="imageLoad" style="width: {{376*1280/1920}}rpx" wx:if="{{idx!==item.length && item.linkUrl != 'h'}}"></image>

                        </view>
                        
                    </scroll-view>

                    
                </view>
                <view class="dots">
                    <view class="dot"></view>
                    <view class="dot"></view>
                    <view class="dot"></view>
                </view>
            </view>
            
        </view>



