        <view bindtap="onSwitchTab" class="artwork-tab bg-color {{item.active?'artwork-tab-active':''}}" data-type="nj" data-categoryid="{{item.id}}" wx:for="{{artworkTabs}}" wx:for-index="tab_index" wx:key="j" style="background:#{{item.barCode}};">
