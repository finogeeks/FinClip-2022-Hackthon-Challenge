page {
    background-color: #e5e5e5;
    min-height: 100vh;
}

.store-choose-container {
    padding: 30rpx 30rpx;
    background-color: #e5e5e5;
    /* min-height: 100vh; */
}

.store-choose-title {
    padding: 20rpx 0 10rpx 0;
}

.store-choose-subtitle {
    font-size: 24rpx;
    margin-bottom: 40rpx;
}

.store-item {
    width: 100%;
    height: 120rpx;
    padding: 15rpx 20rpx 15rpx 40rpx;
    font-size: 44rpx;
    border: none;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
    background-color: #fff;
    color: #4d4d4d;
    transition: all .1s ease-in-out;
    display: flex;
}

.store-item .title {
    flex: 1;
}

.store-item .subtitle {
    flex: 1;
    font-size: 24rpx;
    color: #a3a3a3;
    position: relative;
    text-align: right;
}

.store-item .subtitle.has-icon-new {
    padding-right: 90rpx;
}

.store-item .subtitle view {
    height: 92rpx;
    line-height: 92rpx;
}

.icon-new {
    background-image: url(data:image/png;base64,);
    background-size: 68rpx 30rpx;
    width: 68rpx;
    height: 30rpx;
    display: block;
    position: absolute;
    right: 10rpx;
    top: 30rpx;
}

.item-center {
    height: 92rpx;
    line-height: 92rpx;
}

.store-item:active {
    transform: scale(1.05);
}

.store-item-active {
    padding: 40rpx;
    border: 2rpx solid #20b922;
    border-radius: 10rpx;
    font-size: 24rpx;
    color: #20b922;
}

.store-active-name {
    font-size: 44rpx;
    font-weight: bold;
    margin-bottom: 0;
}

.store-active-info {
    margin-top: 0;
    font-size: 24rpx;
    color: #333;
}

.store-choose-next {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    text-align: center;
    font-size: 36rpx;
    background: #20b922;
    color: #fff;
}

.border-color-0 {
    border-left: 20rpx solid #a6cca3;
}

.border-color-1 {
    border-left: 20rpx solid #ff8b40;
}

.border-color-2 {
    border-left: 20rpx solid #cfbe65;
}