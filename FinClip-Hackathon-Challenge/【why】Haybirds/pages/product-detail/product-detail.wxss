}

.vi-border-life {
    border-color: #acc6db!important;
}

.vi-bg-face {
    background-color: #f04a8c!important;
}

.vi-border-face {
    border-color: #f04a8c!important;
}

.vi-bg-look {
    background-color: #50239e!important;
