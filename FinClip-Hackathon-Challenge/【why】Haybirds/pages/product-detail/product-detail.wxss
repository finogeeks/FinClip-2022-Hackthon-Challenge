.artwork-banner {
    display: block;
}

.artwork-banner image {
    width: 100%;
    height: 270rpx;
}

.artwork-banner swiper {
    height: 270rpx;
}



.package-gallery {
}

.artwork-theme-groups {
    height: 900rpx;
    margin-top: 20rpx;
}

.artwork-theme-groups swiper {
    height: 100%;
}

.artwork-theme-group {
    width: 100%;
    height: 100%;
    display: block;
    align-items: center;
    justify-content: space-between;
    font-size: 20rpx;
    color: #101010;
    background: #fff;
    margin-left: 10rpx;
}

.artwork-theme-item {
    width: 236rpx;
    height: 390rpx;
    display: inline-block;
    word-break: break-all;
    margin: 6rpx 4rpx 20rpx;
    font-weight: bold;
    line-height: 46rpx;
    border-radius: 4rpx;
    text-align: center;
}

.artwork-theme-item image {
    width: 236rpx;
    height: 346rpx;
    display: block;
    margin-bottom: 10rpx;
    background: #F8F8FA;
}







