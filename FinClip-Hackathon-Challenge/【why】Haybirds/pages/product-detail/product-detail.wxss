@import "../../wuBaseWxss/0.wxss";

@import "../../components/package-info/index.wxss";

page {
    padding-bottom: 40rpx;
}

.page-container {
    margin-bottom: 68rpx;
    position: relative;
}

.nico-package {
    padding-bottom: 120rpx;
}

.nico-package .scroll-view {
    padding: 10px 0 0;
    height: 376rpx;
    white-space: nowrap;
}

.nico-package .scroll-view-item {
    height: 376rpx;
    margin: 0;
    display: inline-block;
    position: relative;
}

.nico-package .scroll-view-item image {
    width: auto;
    height: 376rpx;
}

.groupon-banner {
    width: 100%;
}

.groupon-banner image {
    width: 100%;
    height: 138rpx;
}

.groupon-status {
    text-align: center;
    font-size: 24rpx;
    display: flex;
    justify-content: center;
}

.groupon-status .highlight {
    color: #20b922;
    font-weight: 800;
}

.package-item {
    margin-top: 40rpx;
    margin-bottom: 40rpx;
}

.package-intro {
    margin-top: 34rpx;
    padding: 0 30rpx;
    text-align: center;
}

.package-intro>view {
    margin: 10rpx 0;
}

.package-title {
    font-size: 44rpx;
    font-weight: bold;
    font-family: 'HelveticaNeue-Bold','Helvetica-Bold';
}

.package-subtitle {
    font-size: 26rpx;
}

.package-promise {
    font-size: 44rpx;
    font-weight: lighter;
    color: #9a9a9a;
}

