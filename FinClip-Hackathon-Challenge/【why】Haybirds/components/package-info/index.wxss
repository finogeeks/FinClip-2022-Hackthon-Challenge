.package-info {
    padding: 0 30rpx;
}

.package-options {
    display: flex;
    flex-direction: row;
    padding: 0 10rpx;
}

.package-option {
    flex: 1;
    display: flex;
    flex-direction: column;
    border: 1px solid #cccccc;
    color: #b3b3b3;
    border-radius: 10rpx;
    margin: 0 10rpx 50rpx;
    height: 140rpx;
    position: relative;
}

.package-option.active {
    color: #fff;
}

.package-option-checkbox {
    position: absolute;
    top: -28rpx;
    right: -16rpx;
}

.package-option-checkbox .checkbox {
    width: 68rpx;
    height: 68rpx;
}

.package-option-title {
    width: 100%;
    height: 50rpx;
    flex: 6;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 52rpx;
    font-weight: bold;
    font-family: 'HelveticaNeue','Helvetica';
    padding-top: 24rpx;
}

.package-option-content {
    flex: 4;
    width: 100%;
    align-self: flex-start;
    font-size: 54rpx;
    text-align: center;
    padding-bottom: 0;
}

.package-option-content span.price {
    font-size: 38rpx;
}

.package-option-content span.label {
    font-size: 32rpx;
    padding: 4rpx;
}

.package-choose {
    padding: 36rpx 0;
    font-size: 26rpx;
    text-align: center;
}

.package-feature {
    font-size: 12px;
    width: 90%;
    margin: 0 auto;
}

.package-feature-items {
    display: flex;
    flex-direction: row;
}

.package-feature-item {
    flex: 1;
    display: flex;
    flex-direction: column;
    border: 1rpx solid #d3bd55;
    border-radius: 10rpx;
    margin: 0 4rpx 8rpx;
    height: 120rpx;
    overflow: hidden;
}

.package-feature-item-title {
    flex: 4;
    color: #fff;
    background-color: #d3bd55;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 50rpx;
}

.package-feature-item-content {
    flex: 6;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 36rpx;
    font-weight: lighter;
}

.package-description {
    margin-top: 10rpx;
    margin-bottom: 90rpx;
    border: 1rpx solid #d3bd55;
    border-radius: 10rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    overflow: hidden;
}

.package-description-title {
    width: 100%;
    height: 60rpx;
    flex: 4;
    color: #fff;
    background-color: #d3bd55;
    display: flex;
    align-items: center;
    justify-content: center;
}

.package-description-content {
    flex: 6;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: 'HelveticaNeue-Bold','Helvetica-Bold';
}

.package-description text {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: left;
    padding: 30rpx 20rpx;
    font-size: 12px;
    line-height: 1.75;
}