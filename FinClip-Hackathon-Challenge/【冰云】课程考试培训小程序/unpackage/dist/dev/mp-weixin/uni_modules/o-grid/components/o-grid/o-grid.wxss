.grid-wrap {
  background-color: #f6f6f6;
}
.o-title {
  font-size: 15px;
  font-weight: 600;
  color: #333;
  background-color: #f6f6f6;
  height: 50rpx;
  line-height: 30rpx;
  position: relative;
  padding-left: 40rpx;
  padding-top: 32rpx;
  box-sizing: content-box;
}
.o-title::after {
  position: absolute;
  content: "";
  left: 15rpx;
  top: 34rpx;
  height: 24rpx;
  width: 6rpx;
  border-radius: 60rpx;
  background-color: #999;
  z-index: 2;
}
