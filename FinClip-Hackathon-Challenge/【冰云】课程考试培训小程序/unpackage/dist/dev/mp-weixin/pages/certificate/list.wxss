
.wrap{
	height: 100%;
	position: flex;
	flex: 1;
	background: linear-gradient(-15deg, #4096d8, #0063c3);
}
.logo-view{
	text-align: center;
	height: 20%;
}
.logo{
	width: 200rpx;
	height: 200rpx;
}
.logo-title{
	padding: 50rpx;
	font-weight: bold;
	color: white;
	font-size: 40rpx;
}
.content{
	width: 46%;
	display: inline-block;
	text-align: center;
	background-color: #f1efe38c;
	margin: 2%;
	padding-bottom: 20rpx;
	border-radius: 10rpx;
}
.content-wrap{
	position: fixed;
	height: 80%;
	background-color: white;
	border-radius: 10rpx;
	width: 90%;
	margin: 0 5%;
	text-align: left;
}
.content-img{
	width: 100%;
	height: 300rpx;
}
.content-text{
	font-weight: bold;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

