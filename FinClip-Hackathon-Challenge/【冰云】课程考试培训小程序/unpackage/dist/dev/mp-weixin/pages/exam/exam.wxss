.app {
  background-color: white;
  height: 90vh;
}
.remaining-time {
  padding: 10px;
  font-size: 12px;
  color: #099aef;
  background-color: aliceblue;
}
.exam-div {
  background-color: #fff;
}
.type {
  padding: 6rpx 12rpx;
  font-size: 28rpx;
  color: #0a98d5;
  background-color: #0a98d521;
  font-weight: normal;
  margin-right: 10rpx;
}
.title {
  font-weight: bold;
  font-size: 36rpx;
}
.btn {
  position: fixed;
  bottom: 0;
  width: 100%;
}
.btn-1 {
  background-color: #0A98D5;
  color: white;
}
.btn-2 {
  color: #0A98D5;
}
.btn-no-select {
  border-radius: 100px;
  padding: 0;
  width: 70rpx;
  height: 70rpx;
  font-size: 28rpx;
  display: inline-grid;
  margin-right: 10rpx;
}
.li-select {
  color: #0a98d5;
  background-color: #10b5fc21;
}
.li-select button {
  color: white;
  background-color: #0a98d5;
}
.li-answer {
  color: #4cd964;
}
.li-answer button {
  background-color: #4cd964;
  color: white;
}
.li-answer-error {
  color: #dd524d;
}
.li-answer-error button {
  background-color: #dd524d;
  color: white;
}
.answer-option {
  padding: 10px;
  background-color: #80808029;
  font-weight: bold;
  margin: 10px;
}
.answer-parse {
  margin: 10px;
}
.answer-parse ._span {
  padding: 2px 10px;
  background-color: #3cadde;
  color: white;
  margin-right: 10px;
}
.btn-placeholder {
  height: 92rpx;
}

