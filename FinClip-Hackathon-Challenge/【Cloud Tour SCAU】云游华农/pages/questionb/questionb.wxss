page{
  height: 100vh !important;
  background:linear-gradient(#77e7b1 ,#fff 50%)
}
.why{
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.why image{
  margin-top: 100rpx;
  height: 330rpx;
  width: 330rpx;
  border:10rpx solid white;
  border-radius: 50%;
  animation: jackInTheBox 1s linear;
}
.text{
  margin-top: 100rpx;
  font-size: 50rpx;
  color: rgb(54, 54, 54);
  font-weight: bold;
}
.else{
  font-size: 24rpx;
  color: rgb(126, 126, 126);
  margin-top: 30rpx;
}
.enter{
  margin-top: 200rpx;
  width: 400rpx;
  height: 80rpx;
  color: white;
  border-radius: 20rpx;
  text-align: center;
  line-height: 80rpx;
  background: #46d894;
}