<template name="finclip-actionsheet">
  <view class="finclip-actionsheet {{ show ? 'finclip-actionsheet--show' : '' }}">
    <view
      class="finclip-actionsheet__mask"
      catchtap="_handleFinclipActionsheetMaskClick"
      data-close-on-click-overlay="{{ closeOnClickOverlay }}"
      data-component-id="{{ componentId }}"></view>
    <view class="finclip-actionsheet__container">
      <!-- 实际按钮显示 -->
      <button
        wx:for="{{ actions }}"
        wx:for-index="index"
        wx:for-item="item"
        wx:key="{{ index }}-{{ item.name }}"
        catchtap="_handleFinclipActionsheetBtnClick"
        data-component-id="{{ componentId }}"
        data-index="{{ index }}"
        open-type="{{ item.openType }}"
        class="finclip-btn finclip-actionsheet__btn {{ item.loading ? 'finclip-btn--loading' : '' }} {{ item.className }}"
      >
        <text>{{ item.name }}</text>
        <text
          wx:if="{{ item.subname }}"
          class="finclip-actionsheet__subname">{{ item.subname }}</text>
      </button>

      <!-- 关闭按钮 -->
      <view
        wx:if="{{ cancelText }}"
        class="finclip-actionsheet__footer"
      >
        <button
          class="finclip-btn finclip-actionsheet__btn"
          catchtap="_handleFinclipActionsheetCancelBtnClick"
          data-component-id="{{ componentId }}"
        >{{ cancelText }}</button>
      </view>
    </view>
  </view>
</template>
