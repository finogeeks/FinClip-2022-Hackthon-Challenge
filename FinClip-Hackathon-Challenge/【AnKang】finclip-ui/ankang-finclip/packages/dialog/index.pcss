@import "../common/_mixins";

/* 基础样式 */
.finclip-dialog--container {
  position: fixed;
  top: 45%;
  left: 50%;
  width: 80%;
  height: 0;
  font-size: 16px;
  overflow: hidden;
  transition: all .2s linear;
  border-radius: 4px;
  background-color: #fff;
  transform: translate3d(-50%, -50%, 0);
  color: #333;
  opacity: 0;
}

.finclip-dialog--mask {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.6);
  transition: .3s;
  display: none;
}

/* 弹出层内容 */
.finclip-dialog__header {
  padding: 15px 0 0;
  text-align: center;
}

.finclip-dialog__content {
  position: relative;
  padding: 15px 20px;
  line-height: 1.5;
  min-height: 40px;

  &::after {
    @mixin hairline;
    border-bottom-width: 1px;
  }
}

/* 在有标题时，需要减弱内容的存在感 */
.finclip-dialog__content--title {
  color: #999;
  font-size: 14px;
}

.finclip-dialog__footer {
  overflow: hidden;
}

.finclip-dialog__button {
  line-height: 50px;
  height: 50px;
  padding: 0 5px;
  border-radius: 0;
  margin-bottom: 0;

  &::after {
    border-width: 0;
    border-radius: 0;
  }
}

/* 展示时，样式重置 */
.finclip-dialog--show .finclip-dialog--container {
  opacity: 1;
  height: auto;
}

.finclip-dialog--show .finclip-dialog--mask {
  display: block;
}

/* 水平/垂直布局 */
.finclip-dialog__footer--horizon {
  display: flex;
}

.finclip-dialog__footer--horizon .finclip-dialog__button {
  flex: 1;

  &::after {
    border-right-width: 1px;
  }

  &:last-child::after {
    border-right-width: 0;
  }
}


.finclip-dialog__footer--vertical .finclip-dialog__button {
  flex: 1;

  &::after {
    border-bottom-width: 1px;
  }

  &:last-child::after {
    border-bottom-width: 0;
  }
}
